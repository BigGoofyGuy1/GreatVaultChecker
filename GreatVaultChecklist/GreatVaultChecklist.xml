<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="GreatVaultChecklistFrame" movable="true" resizable="true" hidden="true" parent="UIParent">
        <Size x="400" y="200" />
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Backdrop bgFile="Interface\\DialogFrame\\UI-DialogBox-Background" edgeFile="Interface\\DialogFrame\\UI-DialogBox-Border" tile="true">
            <EdgeSize value="16"/>
            <TileSize value="16"/>
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
        </Backdrop>

        <FontString name="ChecklistTitle" font="GameFontNormalLarge" text="Great Vault Checklist">
            <Anchors>
                <Anchor point="TOP" y="-20" />
            </Anchors>
        </FontString>

        <Button name="CloseButton" inherits="UIPanelButtonTemplate" text="Close">
            <Size x="80" y="22"/>
            <Anchors>
                <Anchor point="BOTTOM" y="10"/>
            </Anchors>
            <Scripts>
                <OnClick>
                    self:GetParent():Hide()
                </OnClick>
            </Scripts>
        </Button>

        <FontString name="MythicProgress" font="GameFontNormal" text="Mythic+ Progress:">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-60" />
            </Anchors>
        </FontString>

        <FontString name="RaidProgress" font="GameFontNormal" text="Raid Progress:">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-90" />
            </Anchors>
        </FontString>

        <FontString name="DelveProgress" font="GameFontNormal" text="Delve Progress:">
            <Anchors>
                <Anchor point="TOPLEFT" x="20" y="-120" />
            </Anchors>
        </FontString>
    </Frame>
</Ui>
