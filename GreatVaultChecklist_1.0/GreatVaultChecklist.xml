<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <!-- Define the frame and its components -->
    <Frame name="GreatVaultChecklistFrame" parent="UIParent" frameStrata="MEDIUM" enableMouse="true" movable="true" hidden="true" toplevel="true" inherits="BackdropTemplate,BasicFrameTemplateWithInset">
        <Size>
            <AbsDimension x="500" y="175"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <!-- Title and Progress Texts -->
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontHighlightLarge" text="Great Vault Checklist">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" x="0" y="-5"/>
                    </Anchors>
                </FontString>                

                <FontString name="$parentRaidProgressText" inherits="GameFontNormal" text="Raid Progress:">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="20" y="-35"/>
                    </Anchors>
                </FontString>

                <FontString name="$parentMythicProgressText" inherits="GameFontNormal" text="Mythic Progress: ">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="20" y="-65"/>
                    </Anchors>
                </FontString>

                <FontString name="$parentDelveProgressText" inherits="GameFontNormal" text="Delve Progress:">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="20" y="-95"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

    </Frame>
</Ui>
